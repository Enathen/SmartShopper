<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/colorBackground"

    tools:context=".Activity.Login.LoginScreen">

    <EditText
        android:id="@+id/usernameLabel"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/fontColorText"
        android:textSize="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

    <EditText
        android:id="@+id/passwordLabel"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/fontColorText"
        android:textSize="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextField" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="387dp"
        android:layout_height="75dp"

        android:background="@drawable/bluebutton"
        android:text="@string/loginLogin"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alwaysLoggedInCheckBox" />

    <Button
        android:id="@+id/forgotPasswordButton"
        android:layout_width="387dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bluebutton"
        android:text="@string/forgotPasswordLogin"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="387dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/greybutton"
        android:textColor="@color/fontColorTextWhite"

        android:soundEffectsEnabled="false"
        android:text="@string/createAccountLogin"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswordButton" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="387dp"
        android:layout_height="75dp"
        android:background="@drawable/greybutton"
        android:textColor="@color/fontColorTextWhite"

        android:soundEffectsEnabled="false"
        android:text="@string/menuLogin"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/createAccount" />

    <ImageView
        android:id="@+id/crestImageView"
        android:layout_width="387dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ceglogo"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/passwordTextField"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/passwordCreate"
        android:textColor="@color/fontColorTextWhite"
        android:textSize="@dimen/text_large"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameLabel" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/usernameCreate"
        android:textColor="@color/fontColorTextWhite"
        android:textSize="@dimen/text_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crestImageView" />

    <CheckBox
        android:id="@+id/alwaysLoggedInCheckBox"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:checked="true"
        android:scaleX="1"
        android:scaleY="1"

        android:text="@string/alwaysLoggedInLogin"
        android:textColor="@color/fontColorTextWhite"
        android:textSize="@dimen/text_large"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel" />

</android.support.constraint.ConstraintLayout>
